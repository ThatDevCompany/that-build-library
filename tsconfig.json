{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "./src",
		"target": "es6",
		"module": "commonjs",
		"inlineSourceMap": true,
		"inlineSources": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"types": [
			"jasmine",
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		]
	},
	"include": [
		"./src"
	],
	"exclude": [
		"admin",
		"dist",
		"e2e",
		"node_modules",
		"*.module.ts",
		"**/*.module.ts"
	]
}
